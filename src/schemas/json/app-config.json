{
	"$schema": "https://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"dbHost": {
			"type": "string"
		},
		"dbPort": {
			"type": "integer"
		},
		"dbName": {
			"type": "string"
		},
		"dbUser": {
			"type": "string"
		},
		"dbPass": {
			"type": "string"
		},
		"tables": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"schema": {
						"type": "string"
					},
					"name": {
						"type": "string"
					}
				},
				"required": [
					"name"
				]
			}
		}
	},
	"required": [
		"dbHost",
		"dbName",
		"dbUser",
		"dbPass",
		"tables"
	]
}
