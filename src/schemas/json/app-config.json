{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AppConfig",
  "type": "object",
  "properties": {
    "databases": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/database"
      }
    }
  },
  "required": [
    "databases"
  ],
  "definitions": {
    "columnOverride": {
      "title": "ColumnOverride",
      "oneOf": [
        {
          "$ref": "#/definitions/columnOverrideIgnore"
        },
        {
          "$ref": "#/definitions/columnOverrideNullable"
        },
        {
          "$ref": "#/definitions/columnOverrideType"
        }
      ]
    },
    "columnOverrideIgnore": {
      "title": "ColumnOverrideIgnore",
      "type": "object",
      "properties": {
        "ignore": {
          "type": "boolean"
        }
      },
      "required": [
        "ignore"
      ],
      "additionalProperties": false
    },
    "columnOverrideNullable": {
      "title": "ColumnOverrideNullable",
      "type": "object",
      "properties": {
        "nullable": {
          "type": "boolean"
        }
      },
      "required": [
        "nullable"
      ],
      "additionalProperties": false
    },
    "columnOverrideType": {
      "title": "ColumnOverrideType",
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/columnType"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "columnType": {
      "title": "ColumnType",
      "type": "string",
      "enum": [
        "boolean",
        "Date",
        "number",
        "string"
      ]
    },
    "database": {
      "title": "DbConfig",
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "user": {
          "type": "string"
        },
        "pass": {
          "type": "string"
        },
        "schemas": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/schema"
          }
        }
      },
      "required": [
        "host",
        "port",
        "name",
        "user",
        "pass",
        "schemas"
      ]
    },
    "schema": {
      "title": "SchemaConfig",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "tables": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/table"
          }
        }
      },
      "required": [
        "name",
        "tables"
      ]
    },
    "table": {
      "title": "TableConfig",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "overrides": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/columnOverride"
          }
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
